{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "rootDir": "./",
        "baseUrl": "./",
        "strict": true,
        "noImplicitOverride": true,
        "paths": {
            "@/kernel/*": ["packages/kernel/*"],
            "@/os/*": ["./packages/os/*"]
        }
    },
    "include": ["**/*"]
}
